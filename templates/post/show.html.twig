{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

    <h1 class="my-3">Post
        <a class="btn btn-info my-2 float-right" href="{{ path('post_index', {'category_id': category_id}) }}">Back to list</a>
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ post.category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="post-content">{{ post.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ post.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary my-2" href="{{ path('post_edit', {'id': post.id, 'category_id': category_id}) }}">Edit</a>
   
    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
