{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="my-3">Categories
        <a class="btn btn-info float-right" href="{{ path('category_new') }}">Create new</a>
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th style="width:50px">Id</th>
                <th>Name</th>
                <th style="width:160px">Created</th>
                <th style="width:200px">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-success" href="{{ path('category_show', {'id': category.id}) }}">View</a>
                    <a class="btn btn-sm btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>
                    <a class="btn btn-sm btn-info" href="{{ path('post_index', {'category_id': category.id}) }}">See posts</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
