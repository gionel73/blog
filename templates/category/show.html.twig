{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1 class="my-3">Category
        <a class="btn btn-info my-2 float-right" href="{{ path('category_index') }}">Back to list</a>
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary my-2" href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
